{
    "defaultSeverity": "error",
    "extends": [
      "tslint:latest",
      "tslint-eslint-rules",
      "tslint-sonarts"
    ],
    "jsRules": {},
    "rules": {
      "curly": [true, "ignore-same-line"],
      "semicolon": [true, "never"],
      "quotemark": [true, "single", "avoid-escape", "avoid-template"],
      "no-trailing-whitespace": [true, "ignore-jsdoc"],
      "no-shadowed-variable": false,
      "interface-name": [true, "never-prefix"],
      "forin": false,
      "max-line-length": [true, 150],
      "no-console": false,
      "typeof-compare": true,
      "member-access": [true, "check-accessor"],
      "member-ordering": [true, {"order": "fields-first", "alphabetize": false}],
      "binary-expression-operand-order": true,
      "object-literal-sort-keys": [true, "ignore-case", "locale-compare", "match-declaration-order", "shorthand-first"],
      
      // tslint-eslint-rules
      "variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore"],
      "ter-indent": [ true, 2, { "SwitchCase": 1 }],
      "ter-arrow-parens": [true, "always"],

      // tslint-sonarts
      "cognitive-complexity": false,
      "no-unconditional-jump": false,
      "no-commented-code": false,
      "arguments-order": true
    },
    "rulesDirectory": [
      //"node_modules/tslint-eslint-rules/dist/rules"
    ]
}