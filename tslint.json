{
    "defaultSeverity": "error",
    "extends": [
      "tslint:latest",
      "tslint-eslint-rules",
      "tslint-sonarts"
    ],
    "jsRules": {},
    "rules": {
      "curly": [true, "ignore-same-line"],
      "semicolon": [true, "never"],
      "quotemark": [true, "single", "avoid-escape", "avoid-template"],
      "no-trailing-whitespace": [true, "ignore-jsdoc"],
      "no-shadowed-variable": false,
      "interface-name": [true, "never-prefix"],
      "forin": false,
      "max-line-length": [true, 160],
      "no-console": false,
      "typeof-compare": true,
      "member-access": [true, "check-accessor"],
      "member-ordering": [true, {"order": "fields-first", "alphabetize": false}],
      "binary-expression-operand-order": true,
      "object-literal-sort-keys": [true, "ignore-case", "locale-compare", "match-declaration-order-only", "shorthand-first"],
      "no-empty": false,
      "no-bitwise": false,
      "no-duplicate-imports": false, // fs.promises import issue
      "arrow-parens": false,
      "no-string-throw": true,
      "max-classes-per-file": false,
      "unified-signatures": false,
      "no-object-literal-type-assertion": false,
      "trailing-comma": [true, {"multiline": {"arrays": "always", "exports": "always", "functions": "always", "imports": "always", "objects": "always"}}],
      
      // tslint-eslint-rules
      "variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore"],
      "ter-indent": [ true, 2, { "SwitchCase": 1 }],
      "ter-arrow-parens": [true, "as-needed", { "requireForBlockBody": true }],

      // tslint-sonarts: Maybe there are a few good rules?
      "cognitive-complexity": false,
      "no-unconditional-jump": false,
      "no-commented-code": false,
      "use-type-alias": false,
      "arguments-order": true,
      "no-collapsible-if": false,
      "no-statements-same-line": false,
      "no-try-promise": true,
      "no-nested-template-literals": false,
      "no-duplicate-string": [true, 5],
      "no-nested-switch": false,
      "no-big-function": false,
      "max-switch-cases": false,
      "max-union-size": false
    },
    "rulesDirectory": [
      //"node_modules/tslint-eslint-rules/dist/rules"
    ]
}